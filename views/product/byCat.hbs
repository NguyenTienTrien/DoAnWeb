{{#section 'title'}}
    Products
{{/section}}

{{#if noProducts}}
<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		NO PRODUCTS
	</div>
</div>
{{else}}
<div class="row">
	{{#each products}}
	<div class="col-sm-6 col-md-4">
		<div class="thumbnail">
			<img src="/images/{{ProID}}/main_images.jpg" alt="{{ProName}}" title="{{ProName}}">
			<div class="caption">
				<h4>{{ProName}}</h4>
				<h4>{{number_format Price}}</h4>
				<p style="height: 60px">{{TinyDes}}</p>
				<p>
					<a href="#" class="btn btn-primary">
						<span class="fa fa-eye"></span>
						View Details
					</a>
					<a href="#" class="btn btn-primary">
						<span class="fa fa-shopping-cart"></span>
					</a>
				</p>
			</div>
		</div>
	</div>
	{{/each}}
</div>
<ul class="pagination">
	<li><a href="#">&laquo;</a></li>
	{{#each page_numbers}}
		{{#if isCurrentPage}}
		<li class="active"><a href="javascript:;">{{value}}</a></li>
		{{else}}
		<li><a href="?page={{value}}">{{value}}</a></li>
		{{/if}}
	{{/each}}
	<li><a href="#">&raquo;</a></li>
</ul>
{{/if}}