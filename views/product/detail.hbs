{{#section 'title'}}
    Product
{{/section}}

{{#with product}}

<div class="container">
        <div class="col-sm-4">
            <img class="anhsp2" src="/images/{{ProID}}/main_images.jpg" width="300" height="600">

        </div>
        <div class="col-sm-4 spAAA">
            <br>
            <br>

            <p class="spDDD">Thông tin chi tiết sản phẩm</p>
            <h4>{{ProName}}</h4>
            <p>Tác giả: <a href="https://vi.wikipedia.org/wiki/Nam_Cao">{{TinyDes}}</a></p>
            <p>
                {{{FullDes}}}
            </p>
            <p>
                Tồn kho: {{Quantity}}
            </p>
            </br>
            <p>
                Ngày đăng tải: {{DateDangTai}}
            </p>
            
            <p>
                Số lượng đã bán: {{SoLuongDaBan}}
            
            <p>
            
            <p>
                Số lượt xem: {{SoLuotXem}}
            </p>
            
           
        </div>
        <div class="col-sm-3">
            <br>
            <br>
            <div class="spBBB">
                <div class="spCCC">Thông tin Giá</div>
                <hr>
                <div>Giá bán: &nbsp;&nbsp;&nbsp;&nbsp;<span class="giaban"> <h4>{{number_format Price}}  VND</h4></span> </div>
                
                <div>Chất lượng sách: &nbsp;&nbsp;&nbsp;&nbsp;Loại A</div>
                <div>
                    Đánh giá: &nbsp;&nbsp;&nbsp;&nbsp;
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star checked"></span>
                    <span class="fa fa-star"></span>
                </div>
                <hr>
                <div class="benphai tietkiem"><i class="fa fa-check-circle"></i>Có hàng</div><br>
                {{/with}}
                {{#if layoutVM.isLogged}}
                    <form class="form-horizontal" id="frmAddItem" method="post" action="/cart/add">
                        <div class="form-group">
                            <div class="col-sm-4">
                                <div class="input-group" style="margin-left: 24px;">
                                    <input name="proId" type="hidden" value="{{product.ProID}}">
                                    <input name="quantity" type="text" class="form-control" placeholder="Slg" value="1">
                                        <button class="btn btn-primary"  type="submit">
                                            <span class="fa fa-plus"></span>
                                            ADD
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </form>
                {{/if}}
            </div>
           
        </div>

    </div>










<hr>
<h4>Sách cùng loại</h4>


