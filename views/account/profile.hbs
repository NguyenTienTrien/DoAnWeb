{{#section 'title'}}
    Profile
{{/section}}

{{#section 'css'}}
<style>
        .abc {
            display: none;
        }
 </style>
{{/section}}

<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		Sinh viên tự thực hiện.
	</div>
</div>
<form action="" method="POST" class="form-horizontal" role="form">
	<div class="abc form-group">
        <label for="txtUsername" class="col-sm-2 control-label">ID</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtID" value="{{layoutVM.curUser.f_ID}}" name="ID">
        </div>
    </div>
    <div class="form-group">
        <label for="txtUsername" class="col-sm-2 control-label">Tên đăng nhập</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtUsername" value="{{layoutVM.curUser.f_Username}}" name="username">
        </div>
    </div>
    <div class="form-group">
        <label for="txtPWD" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" id="txtPWD" value="{{layoutVM.curUser.f_Password}}" name="rawPWD">
        </div>
    </div>
							    
    <div class="form-group">
        <label for="txtName" class="col-sm-2 control-label">Họ tên</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtName" value="{{layoutVM.curUser.f_Name}}" name="name">
        </div>
    </div>
    <div class="form-group">
        <label for="txtEmail" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtEmail" value="{{layoutVM.curUser.f_Email}}" name="email">
        </div>
    </div>
    <div class="form-group">
        <label for="txtDOB" class="col-sm-2 control-label">Ngày sinh</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="txtDOB" value="{{layoutVM.curUser.f_DOB}}" name="dob">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
            <button  class="btn btn-success">
                <span class="fa fa-check"></span>
                Cập Nhật Thông Tin Cá Nhân
            </button>
            <button  class="btn btn-cancel">
                <span class="fa fa-check"></span>
                Hủy
            </button>
        </div>
    </div>
</form>