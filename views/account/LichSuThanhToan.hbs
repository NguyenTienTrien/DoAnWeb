{{#section 'title'}}
    Lịch sử mua hàng
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-datepicker/css/bootstrap-datepicker3.min.css">
{{/section}}

{{#section 'js'}}
<script src="/assets/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $('#txtDOB').datepicker({
        format: 'd/m/yyyy',
        autoclose: true
    });
</script>
{{/section}}


{{#if layoutVM.isLogged}}

<div class="row">
	<div class="col-sm-12 col-md-12 col-lg-12">
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Product</th>
					
					<th>Quantity</th>
					<th>Amount</th>
					<th>Date</th>
					<th>Status</th>
					<th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				{{#each oders}}
				<tr>
					<td>{{ProName}}</td>
					
					<td>{{Quantity}}</td>
					<td>{{number_format Amount}}</td>
					<td>{{DatePay}}</td>
					<td>{{Status}}</td>

				</tr>
				{{/each}}
			</tbody>
			
		</table>
	</div>
</div>
{{/if}}